<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clima.Views.Main_Menu.Header">
    <Grid BackgroundColor="#434343"
          HeightRequest="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Frame BackgroundColor="#686868"
               HasShadow="False"
               CornerRadius="10"
               Grid.Row="0"
               Margin="10,5,10,0"
               Padding="15,5">
            <StackLayout Orientation="Horizontal">
                <Label Text="&#xf002;"
                       FontFamily="{StaticResource FontAwesomeSolid}"
                       FontSize="15"
                       VerticalOptions="Center"
                       TextColor="#E8E8E8" />
                <Entry HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand"
                       Placeholder="Busca por ciudad"
                       PlaceholderColor="#E8E8E8"
                       TextColor="#E8E8E8"
                       Keyboard="Text" 
                       />
            </StackLayout>
        </Frame>
        <ScrollView Grid.Row="1"
                    x:Name="forecastDay">
            <StackLayout BindableLayout.ItemsSource="{Binding Categories}"
                         Orientation="Horizontal">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10"
                               HasShadow="False"
                               BackgroundColor="{Binding BackgroundColor}"
                               HorizontalOptions="CenterAndExpand"
                               VerticalOptions="Center"
                               Padding="10,4"
                               Margin="0,0,0,5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Path=BindingContext.Selectcommand,Source={x:Reference forecastDay}}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Label Text="{Binding Day}"
                               FontAttributes="Bold"
                               TextColor="#DBDBDB"
                               FontSize="25"
                               HorizontalOptions="CenterAndExpand"/>
                        </Frame>
                        
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentView>