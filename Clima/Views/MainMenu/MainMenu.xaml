<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clima.Views.MainMenu.MainMenu"
             xmlns:Views="clr-namespace:Clima.Views.MainMenu">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Views:Header VerticalOptions="Start"
                      Grid.Row="0" 
                      Margin="0"/>
        <Views:Body VerticalOptions="FillAndExpand"
                    Grid.Row="1" 
                    Margin="0"/>
        <Views:Footer VerticalOptions="End"
                      Grid.Row="1"
                      Margin="0"/>
    </Grid>
</ContentPage>